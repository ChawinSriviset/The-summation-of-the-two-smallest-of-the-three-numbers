#include<stdio.h>

int main(){
	int a,b,c,sum_1,sum_2,sum_3;
	printf("Enter your first number : ");
	scanf("%d",&a);
	printf("Enter your second number : ");
	scanf("%d",&b);
	printf("Enter your third number : ");
	scanf("%d",&c);
	sum_1 = a+b;
	sum_2 = b+c;
	sum_3 = a+c;
	if (a>b && a>c)
	{
		printf("The smallest numbers are %d and %d",b,c);
		printf("\nThe sum of these numbers is %d",sum_2);
	}
	else if (b>a && b>c)
	{
		printf("The smallest numbers are %d and %d",a,c);
		printf("\nThe sum of these numbers is %d",sum_3);
	}
	else if (c>a && c>b)
	{
		printf("The smallest numbers are %d and %d",a,b);
		printf("\nThe sum of these numbers is %d",sum_1);
	}
	return 0;
}
